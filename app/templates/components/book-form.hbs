<h2>Add a new book</h2>

<form {{action 'submit' on='submit'}}>
	<div class="form-group {{if errors.title 'has-error'}}"> 
		<label for="">Title</label>
		{{input class="form-control" value=book.title focus-out="validateTitle"}}

		{{#each errors.title as |error|}}
		<span class="help-block">{{error.message}}</span>
		{{/each}}
	</div>
	<div class="form-group{{if errors.author 'has-error'}}">
		<label for="">Author</label>
		{{input class="form-control" value=book.author focus-out="validateAuthor"}}

		{{#each errors.author as |error|}}
		<span class="help-block">{{error.message}}</span>
		{{/each}}
	</div>
	<div class="form-group {{if errors.description 'has-error'}}">
		<label for="">Description</label>
		{{textarea class="form-control" value=book.description focus-out="validatedescription"}}

		{{#each errors.description as |error|}}
		<span class="help-block">{{error.message}}</span>
		{{/each}}
	</div>
	<button class="btn btn-primary" type="submit">
		{{buttonLabel}}
	</button>
</form>